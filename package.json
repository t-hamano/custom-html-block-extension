{
	"name": "custom-html-block-extension",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"start": "wp-scripts start src/admin src/block-editor src/classic-editor src/theme-plugin-editor --output-path build",
		"build": "wp-scripts build src/admin src/block-editor src/classic-editor src/theme-plugin-editor --output-path build",
		"clean": "rimraf build",
		"lint": "npm run lint:style && npm run lint:js",
		"lint:php": "composer lint",
		"lint:js": "wp-scripts lint-js",
		"lint:style": "wp-scripts lint-style",
		"test": "npm run lint:js && npm run test:e2e",
		"test:e2e": "wp-scripts test-e2e --config test/e2e/jest.config.js"
	},
	"devDependencies": {
		"@wordpress/e2e-test-utils": "^5.4.5",
		"@wordpress/env": "^4.1.2",
		"@wordpress/scripts": "^19.0.0",
		"opener": "^1.5.2",
		"rimraf": "^3.0.2",
		"stylelint-config-rational-order": "^0.1.2"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.3.1",
		"@wordpress/icons": "^6.0.1",
		"emmet-monaco-es": "^4.6.2",
		"react-notifications-component": "^3.1.0",
		"webfontloader": "^1.6.28"
	}
}
